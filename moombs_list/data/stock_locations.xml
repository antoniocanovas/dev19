<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Pending Delivery Location -->
    <record id="stock_location_pending_delivery" model="stock.location">
        <field name="name">Pending Delivery</field>
        <field name="location_id" ref="stock.stock_location_stock"/>
        <field name="usage">internal</field>
        <field name="company_id" ref="base.main_company"/>
    </record>

    <!-- Operation Type: Transfer to Pending -->
    <record id="picking_type_internal_pending" model="stock.picking.type">
        <field name="name">Transfer to Pending</field>
        <field name="code">internal</field>
        <field name="sequence_code">INT-PEND</field>
        <field name="default_location_src_id" ref="stock.stock_location_stock"/>
        <field name="default_location_dest_id" ref="stock_location_pending_delivery"/>
        <field name="reservation_method">at_confirm</field>
        <field name="warehouse_id" ref="stock.warehouse0"/>
    </record>
</odoo>
