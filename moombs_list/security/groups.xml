<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        <!-- Privilege: Gift Lists -->
        <record id="privilege_gift_list" model="res.groups.privilege">
            <field name="name">Gift Lists</field>
            <field name="category_id" ref="base.module_category_sales"/>
        </record>

        <!-- User: Can view lists -->
        <record id="group_gift_list_user" model="res.groups">
            <field name="name">Gift Lists: User</field>
            <field name="privilege_id" ref="privilege_gift_list"/>
        </record>

        <!-- Advisor: Can create/edit lists -->
        <record id="group_gift_list_advisor" model="res.groups">
            <field name="name">Gift Lists: Advisor</field>
            <field name="privilege_id" ref="privilege_gift_list"/>
            <field name="implied_ids" eval="[(4, ref('group_gift_list_user'))]"/>
        </record>

        <!-- Manager: Full access -->
        <record id="group_gift_list_manager" model="res.groups">
            <field name="name">Gift Lists: Manager</field>
            <field name="privilege_id" ref="privilege_gift_list"/>
            <field name="implied_ids" eval="[(4, ref('group_gift_list_advisor'))]"/>
        </record>
    </data>
</odoo>
