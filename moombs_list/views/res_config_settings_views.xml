<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Extend Sales Settings to add Gift List section -->
    <record id="res_config_settings_view_form_inherit_gift_list" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.inherit.gift.list</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="sale.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <!-- Add Gift List section - try to find any element and add at the end of the form -->
            <!-- Use position="inside" on form to add at the end -->
            <xpath expr="//form" position="inside">
                <div class="app_settings_block" data-string="Gift List" string="Gift List" data-key="moombs_list">
                    <h2>Gift List</h2>
                    <div class="row mt16 o_settings_container">
                        <div class="col-12 col-lg-6 o_setting_box">
                            <div class="o_setting_left_pane"/>
                            <div class="o_setting_right_pane">
                                <span class="o_form_label">Auto Wallet Assignment</span>
                                <span class="o_form_description">
                                    Select the wallet program to automatically assign when creating a gift list. Only active eWallet programs are shown.
                                </span>
                                <div class="mt-2">
                                    <field name="gift_list_wallet_program_id" options="{'no_create': True, 'no_open': True}"/>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </xpath>
        </field>
    </record>
</odoo>

