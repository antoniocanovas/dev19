<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- Form View Extension -->
    <record id="view_pos_order_form_moombs_paid_by" model="ir.ui.view">
        <field name="name">pos.order.form.moombs.paid.by</field>
        <field name="model">pos.order</field>
        <field name="inherit_id" ref="point_of_sale.view_pos_pos_form"/>
        <field name="arch" type="xml">
            <field name="partner_id" position="after">
                <field name="paid_by_partner_id" readonly="1" string="Paid By Partner"/>
                <field name="ewallet_beneficiary_id" readonly="1" string="eWallet Beneficiary"/>
            </field>
        </field>
    </record>

    <!-- Form View Extension: Two-Order Flow Fields -->
    <record id="view_pos_order_form_moombs_two_order" model="ir.ui.view">
        <field name="name">pos.order.form.moombs.two.order</field>
        <field name="model">pos.order</field>
        <field name="inherit_id" ref="point_of_sale.view_pos_pos_form"/>
        <field name="priority">20</field>
        <field name="arch" type="xml">
            <field name="ewallet_beneficiary_id" position="after">
                <field name="is_gift_topup_order" readonly="1" invisible="not is_gift_topup_order"/>
                <field name="topup_order_id" readonly="1" invisible="not topup_order_id"/>
                <field name="settlement_order_id" readonly="1" invisible="not settlement_order_id"/>
            </field>
        </field>
    </record>

    <!-- Tree View Extension -->
    <record id="view_pos_order_tree_moombs_paid_by" model="ir.ui.view">
        <field name="name">pos.order.tree.moombs.paid.by</field>
        <field name="model">pos.order</field>
        <field name="inherit_id" ref="point_of_sale.view_pos_order_tree"/>
        <field name="arch" type="xml">
            <field name="partner_id" position="after">
                <field name="paid_by_partner_id" optional="show"/>
                <field name="is_gift_topup_order" optional="hide"/>
            </field>
        </field>
    </record>

</odoo>
