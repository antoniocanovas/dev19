<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- Wallet Contribution Receipt Template -->
    <template id="wallet_receipt_template">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="o">
                <t t-call="web.external_layout">
                    <div class="page">
                        <!-- Header -->
                        <div class="row mb-4">
                            <div class="col-12 text-center">
                                <h2>Recibo de Aportación</h2>
                                <p class="text-muted">Contribution Receipt</p>
                            </div>
                        </div>

                        <!-- Receipt Info Box -->
                        <div class="row mb-4">
                            <div class="col-6">
                                <strong>N° Recibo:</strong>
                                <span t-field="o.name"/>
                            </div>
                            <div class="col-6 text-end">
                                <strong>Fecha:</strong>
                                <span t-field="o.date_order" t-options="{'widget': 'date'}"/>
                            </div>
                        </div>

                        <hr/>

                        <!-- Amount -->
                        <div class="row mb-4">
                            <div class="col-12 text-center">
                                <h3>Importe / Amount</h3>
                                <h1 class="display-4">
                                    <span t-field="o.amount_total" t-options="{'widget': 'monetary', 'display_currency': o.currency_id}"/>
                                </h1>
                            </div>
                        </div>

                        <hr/>

                        <!-- Beneficiary Section -->
                        <div class="row mb-3">
                            <div class="col-12">
                                <h5>Beneficiario / Beneficiary</h5>
                                <table class="table table-sm">
                                    <tr>
                                        <td width="30%"><strong>Nombre:</strong></td>
                                        <td t-field="o.ewallet_beneficiary_id.name" t-if="o.ewallet_beneficiary_id"/>
                                        <td t-field="o.partner_id.name" t-else=""/>
                                    </tr>
                                    <tr t-if="o.ewallet_beneficiary_id">
                                        <td><strong>Lista:</strong></td>
                                        <td>
                                            <t t-if="o.sale_order_ids">
                                                <t t-foreach="o.sale_order_ids" t-as="so">
                                                    <span t-field="so.baby_list_id.name" t-if="so.baby_list_id"/>
                                                </t>
                                            </t>
                                        </td>
                                    </tr>
                                </table>
                            </div>
                        </div>

                        <!-- Payer Section -->
                        <div class="row mb-3">
                            <div class="col-12">
                                <h5>Pagado por / Paid By</h5>
                                <table class="table table-sm">
                                    <tr>
                                        <td width="30%"><strong>Nombre:</strong></td>
                                        <td t-field="o.paid_by_partner_id.name" t-if="o.paid_by_partner_id"/>
                                        <td t-field="o.partner_id.name" t-else=""/>
                                    </tr>
                                    <tr>
                                        <td><strong>DNI/NIF:</strong></td>
                                        <td t-field="o.paid_by_partner_id.vat" t-if="o.paid_by_partner_id"/>
                                        <td t-field="o.partner_id.vat" t-else=""/>
                                    </tr>
                                    <tr t-if="o.paid_by_partner_id.phone or o.partner_id.phone">
                                        <td><strong>Teléfono:</strong></td>
                                        <td t-field="o.paid_by_partner_id.phone" t-if="o.paid_by_partner_id"/>
                                        <td t-field="o.partner_id.phone" t-else=""/>
                                    </tr>
                                </table>
                            </div>
                        </div>

                        <!-- Payment Method -->
                        <div class="row mb-3">
                            <div class="col-12">
                                <h5>Método de Pago / Payment Method</h5>
                                <table class="table table-sm">
                                    <t t-foreach="o.payment_ids" t-as="payment">
                                        <tr>
                                            <td width="30%"><strong><t t-esc="payment.payment_method_id.name"/>:</strong></td>
                                            <td><span t-field="payment.amount" t-options="{'widget': 'monetary', 'display_currency': o.currency_id}"/></td>
                                        </tr>
                                    </t>
                                </table>
                            </div>
                        </div>

                        <!-- Two-Order Flow: Show linked Top-Up Order details (for Settlement Orders) -->
                        <t t-if="o.topup_order_id">
                            <hr/>
                            <div class="row mb-3">
                                <div class="col-12">
                                    <h5>Recarga de Monedero / Wallet Top-Up</h5>
                                    <table class="table table-sm">
                                        <tr>
                                            <td width="30%"><strong>N° Recarga:</strong></td>
                                            <td t-field="o.topup_order_id.name"/>
                                        </tr>
                                        <tr>
                                            <td><strong>Importe:</strong></td>
                                            <td><span t-field="o.topup_order_id.amount_total" t-options="{'widget': 'monetary', 'display_currency': o.currency_id}"/></td>
                                        </tr>
                                        <tr t-if="o.topup_order_id.paid_by_partner_id">
                                            <td><strong>Pagado por:</strong></td>
                                            <td t-field="o.topup_order_id.paid_by_partner_id.name"/>
                                        </tr>
                                        <t t-foreach="o.topup_order_id.payment_ids" t-as="topup_payment">
                                            <tr>
                                                <td><strong><t t-esc="topup_payment.payment_method_id.name"/>:</strong></td>
                                                <td><span t-field="topup_payment.amount" t-options="{'widget': 'monetary', 'display_currency': o.currency_id}"/></td>
                                            </tr>
                                        </t>
                                    </table>
                                </div>
                            </div>
                        </t>

                        <!-- Two-Order Flow: Show linked Settlement Order details (for Top-Up Orders) -->
                        <t t-if="o.settlement_order_id">
                            <hr/>
                            <div class="row mb-3">
                                <div class="col-12">
                                    <h5>Pedido Liquidado / Settled Order</h5>
                                    <table class="table table-sm">
                                        <tr>
                                            <td width="30%"><strong>N° Pedido:</strong></td>
                                            <td t-field="o.settlement_order_id.name"/>
                                        </tr>
                                        <tr>
                                            <td><strong>Importe:</strong></td>
                                            <td><span t-field="o.settlement_order_id.amount_total" t-options="{'widget': 'monetary', 'display_currency': o.currency_id}"/></td>
                                        </tr>
                                        <tr t-if="o.settlement_order_id.partner_id">
                                            <td><strong>Beneficiario:</strong></td>
                                            <td t-field="o.settlement_order_id.partner_id.name"/>
                                        </tr>
                                        <!-- Show order lines from settlement -->
                                        <t t-foreach="o.settlement_order_id.lines" t-as="line">
                                            <tr t-if="not line.is_reward_line">
                                                <td><t t-esc="line.full_product_name or line.product_id.name"/></td>
                                                <td><span t-field="line.price_subtotal_incl" t-options="{'widget': 'monetary', 'display_currency': o.currency_id}"/></td>
                                            </tr>
                                        </t>
                                    </table>
                                </div>
                            </div>
                        </t>

                        <hr/>

                        <!-- Footer -->
                        <div class="row mt-4">
                            <div class="col-12 text-center text-muted">
                                <p>Gracias por su aportación</p>
                                <p class="small">Thank you for your contribution</p>
                            </div>
                        </div>

                    </div>
                </t>
            </t>
        </t>
    </template>

</odoo>
