<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- Smart Button on Sale Order Form -->
    <record id="view_sale_order_form_workflow_button" model="ir.ui.view">
        <field name="name">sale.order.form.workflow.button</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@name='button_box']" position="inside">
                <button name="action_view_workflow_actions" 
                        type="object" 
                        class="oe_stat_button" 
                        icon="fa-history"
                        context="{'default_document_type': 'sale_order', 'default_document_ref': name, 'default_res_id': id}">
                    <field name="workflow_action_count" widget="statinfo" string="Workflow Actions"/>
                </button>
            </xpath>
        </field>
    </record>
    
