<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- Configuration List View -->
    <record id="view_workflow_config_list" model="ir.ui.view">
        <field name="name">workflow.config.list</field>
        <field name="model">workflow.config</field>
        <field name="arch" type="xml">
            <list>
                <field name="document_type"/>
                <field name="logging_enabled"/>
                <field name="retention_months"/>
                <field name="log_state_changes"/>
                <field name="log_creation"/>
                <field name="log_api_events"/>
            </list>
        </field>
    </record>
    
    <!-- Configuration Form View -->
    <record id="view_workflow_config_form" model="ir.ui.view">
        <field name="name">workflow.config.form</field>
        <field name="model">workflow.config</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <group>
                            <field name="document_type"/>
                            <field name="logging_enabled"/>
                        </group>
                        <group>
                            <field name="retention_months"/>
                        </group>
                    </group>
                    <group string="Logging Options">
                        <field name="log_state_changes"/>
                        <field name="log_creation"/>
                        <field name="log_api_events"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
    
    <!-- Configuration Action -->
    <record id="action_workflow_config" model="ir.actions.act_window">
        <field name="name">Workflow Configuration</field>
        <field name="res_model">workflow.config</field>
        <field name="view_mode">list,form</field>
    </record>
</odoo>

