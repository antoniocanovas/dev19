<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="email_template_order_confirmed" model="mail.template">
        <field name="name">Order Confirmed</field>
        <field name="model_id" ref="base.model_res_partner"/>
        <field name="subject">Your Order Has Been Confirmed</field>
        <field name="body_html" type="html">
            <div>
                <p>Dear ${object.name},</p>
                <p>Your order ${ctx.get('document_ref', '')} has been confirmed.</p>
                <p>Thank you for your purchase!</p>
            </div>
        </field>
    </record>
    
    <record id="email_template_payment_received" model="mail.template">
        <field name="name">Payment Received</field>
        <field name="model_id" ref="base.model_res_partner"/>
        <field name="subject">Payment Received</field>
        <field name="body_html" type="html">
            <div>
                <p>Dear ${object.name},</p>
                <p>We have received your payment for ${ctx.get('document_ref', '')}.</p>
            </div>
        </field>
    </record>
    
    <record id="email_template_shipping_in_transit" model="mail.template">
        <field name="name">Shipping In Transit</field>
        <field name="model_id" ref="base.model_res_partner"/>
        <field name="subject">Your Order is In Transit</field>
        <field name="body_html" type="html">
            <div>
                <p>Dear ${object.name},</p>
                <p>Your order ${ctx.get('document_ref', '')} is now in transit.</p>
                <p>Tracking: ${ctx.get('api_response_id', '')}</p>
            </div>
        </field>
    </record>
    
    <record id="email_template_shipping_delivered" model="mail.template">
        <field name="name">Shipping Delivered</field>
        <field name="model_id" ref="base.model_res_partner"/>
        <field name="subject">Your Order Has Been Delivered</field>
        <field name="body_html" type="html">
            <div>
                <p>Dear ${object.name},</p>
                <p>Your order ${ctx.get('document_ref', '')} has been delivered.</p>
                <p>Thank you for shopping with us!</p>
            </div>
        </field>
    </record>
</odoo>
