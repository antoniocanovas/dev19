<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        <!-- Workflow Action Record Rules -->
        <record id="workflow_action_rule_user" model="ir.rule">
            <field name="name">Users: See own company actions</field>
            <field name="model_id" ref="model_document_workflow_action"/>
            <field name="domain_force">[('company_id', 'in', company_ids)]</field>
        </record>
        
        <record id="workflow_action_rule_portal" model="ir.rule">
            <field name="name">Portal: See own gift list actions</field>
            <field name="model_id" ref="model_document_workflow_action"/>
            <field name="domain_force">['|', ('partner_id', '=', user.partner_id.id), ('baby_list_item_id.list_id.partner_id', '=', user.partner_id.id)]</field>
            <field name="groups" eval="[(4, ref('base.group_portal'))]"/>
        </record>
    </data>
</odoo>