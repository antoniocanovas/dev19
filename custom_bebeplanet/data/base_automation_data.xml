<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        <record id="auto_split_outgoing_picking" model="base.automation">
            <field name="name">Auto-Split: Trigger for Outgoing Pickings</field>
            <field name="model_id" ref="stock.model_stock_picking"/>
            <field name="trigger">on_creation</field>
            <field name="filter_domain">[('picking_type_code', '=', 'outgoing')]</field>
            <!-- This links the rule to the server action containing the code -->
            <field name="action_server_id" ref="custom_bebeplanet.action_server_split_outgoing_picking"/>
        </record>
    </data>
</odoo>
